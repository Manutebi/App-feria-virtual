<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:maipoGrande.Pages"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="maipoGrande.Pages.Addproductos"
        mc:Ignorable="d"
        Title="Addproductos" Height="450" Width="400"
        WindowStyle="None" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="#00ffffff">

    <Border CornerRadius="15" BorderBrush="#FF673AB7" BorderThickness="1,3,1,5" Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid>
            <StackPanel Grid.Row="0" Grid.Column="4" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0" Height="30" Orientation="Horizontal" FlowDirection="RightToLeft">
                <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton" Cursor="Hand"/>
            </StackPanel>

            <Label x:Name="idCalidadLabel" Content="Calidad" HorizontalAlignment="Left" Margin="54,103,0,0" VerticalAlignment="Top" Width="65" Height="24"/>
            <ComboBox x:Name="cbIdCalidad" Margin="184,89,94,0" Loaded="CbIdCalidad_Loaded" VerticalAlignment="Top" Height="38" />
            <Button  materialDesign:ButtonAssist.CornerRadius="10" x:Name="GuardarProducto" Content="Guardar" HorizontalAlignment="Center" Margin="0,341,0,0" VerticalAlignment="Top" Width="112" Click="GuardarProducto_Click" Cursor="Hand" />
            <TextBox x:Name="NombreProductoBox" HorizontalAlignment="Left" Height="26" Margin="184,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Nombre fruta" HorizontalAlignment="Left" Height="29" Margin="54,192,0,0" VerticalAlignment="Top" Width="97"/>
        </Grid>
    </Border>

</Window>
