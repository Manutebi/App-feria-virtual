<Page x:Class="maipoGrande.Pages.Productos"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       xmlns:local="clr-namespace:maipoGrande.Pages"
       mc:Ignorable="d" 
       d:DesignHeight="450" d:DesignWidth="800"
       Title="Productos">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryGrayColor}">


        <Grid>
            <DataGrid x:Name="listadoContrato" Margin="0,11,540,2" Loaded="ListadoContrato_Loaded">
            </DataGrid>
            <Label x:Name="userLabel" Content="Usuario" Margin="347,23,369,395"/>
            <ComboBox x:Name="cbIdUser2" DisplayMemberPath="Id_usuario" HorizontalAlignment="Left" Margin="448,23,0,0" VerticalAlignment="Top" Width="120" Loaded="CbIdContrato_Loaded" Height="32">
            </ComboBox>
            <Label x:Name="fecha_InLabel" Content="Inicio de contrato" Margin="331,87,355,331"/>
            <DatePicker x:Name="fecha_InDate" Margin="332,119,332,283"/>
            <Label x:Name="fecha_TerLabel" Content="Termino de contrato" Margin="556,92,127,331"/>
            <DatePicker x:Name="fecha_TerDate" Margin="556,119,94,288"/>
            <Label x:Name="contratoLabel" Content="Contrato activo?" Margin="290,239,384,173" IsEnabled="False"/>
            <RadioButton x:Name="contratoActivoSi" GroupName="contratoActivo" Content="Si" Margin="400,246,352,179" IsEnabled="False"/>
            <RadioButton x:Name="ContratoActivoNo" GroupName="contratoActivo" Content="No" Margin="448,247,313,189" IsEnabled="False"/>
            <Label x:Name="IDContratoLabel" Content="ID" Margin="297,299,469,121"/>
            <ComboBox x:Name="cbIdContrato" DisplayMemberPath="Id_usuario" HorizontalAlignment="Left" Margin="347,297,0,0" VerticalAlignment="Top" Width="120" Height="32" Loaded="CbIdContrato_Loaded_1" SelectionChanged="CbIdContrato_SelectionChanged">
            </ComboBox>
            <Label x:Name="avisoLabel3" Content="*AVISO: ID habilitada para uso de modificación &#xD;&#xA;o eliminación de contratos. &#xD;&#xA;Seleccione para darle uso." HorizontalAlignment="Left" Margin="491,297,0,0" VerticalAlignment="Top" Height="52" FontSize="10" FontWeight="Bold" Foreground="#FF6C6C6C"/>
            <Button x:Name="guardarContrato" Content="Subir Contrato" HorizontalAlignment="Left" Margin="614,394,0,0" VerticalAlignment="Top" Width="102" Click="GuardarContrato_Click" />
            <Button x:Name="actualizarContrato" Content="Modificar Contrato" HorizontalAlignment="Left" Margin="448,389,0,0" VerticalAlignment="Top" Width="125" Click="Actualizar_Contrato_Click" />
            <Button x:Name="eliminarContrato" Content="Eliminar Contrato" HorizontalAlignment="Left" Margin="291,384,0,0" VerticalAlignment="Top" Width="125" Click="EliminarContrato_Click" />
        </Grid>




    </Border>
</Page>